[default]

#OSD for testing
#osd-msg1='FPS: ${estimated-vf-fps}\nHWDEC_ACTIVE: ${hwdec-detected}\nHWDEC_CURRENT: ${hwdec-current}\nVIDEO_CODEC: ${video-codec}\nSYNC_ACTIVE: ${display-sync-active}\nVSYNC_JITTER: ${vsync-jitter}\nAVSYNC: ${avsync}\nAVSYNC_TOTAL: ${total-avsync-change}\nCACHE_SPEED: ${cache-speed}'
#osd-font='UbuntuLight:antialias=true:autohint=true'
#osd-font-size=16

#Vide Output:
<% if @video_output != 'undef' %>vo=<%= @video_output %><% end %>

# vo=opengl:backend=x11egl:interpolation:tscale=triangle
# vo=opengl-hq:backend=x11:interpolation:tscale=catmull_rom
# vo=opengl-hq:scaler-resizes-only:scale=spline36:cscale=oversample:interpolation:temporal-dither:gamma=0.9:icc-profile-auto

#Video filter -> restrict color space
<% if @rgb_color != 'undef' %>vf=format=fmt=rgb0<% end %>

#Hardware video decoding:
<% if @hardware_decoder != 'undef' %>hwdec=<%= @hardware_decoder %><% end %>

#Keep syncing:
<% if @av_sync != 'undef' %>video-sync=display-resample<% end %>

#Audio delay:
<% if @audio_delay != 'undef' %>audio-delay=<%= @audio_delay %><% end %>

# Number of threads to use for decoding
<% if @vd_threads != 'undef' %>vd-lavc-threads=<%= @vd_threads %><% end %>

#Fullscreen
<% if @fullscreen != 'undef' %>fs=<%= @fullscreen %><% end %>

#Caching
cache=auto
cache-default=2048
